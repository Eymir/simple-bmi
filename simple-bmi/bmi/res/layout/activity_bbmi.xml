<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical|center_horizontal" 
    android:background="#ffffff">



<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical" 
    android:weightSum="7">

    <LinearLayout
        android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:orientation="vertical" 
         android:layout_weight="2"
         android:layout_marginTop="15dp"
        android:background="@drawable/boxes">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/statement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="You are Perfect"
                android:textColor="#000000"
                android:textSize="30dp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
         android:layout_weight="2"
        android:orientation="vertical"
        android:background="@drawable/titlebar" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2" >

            <TextView
                android:id="@+id/numberBMI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="00"
                android:textColor="#000000"
                android:textSize="25dp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:layout_marginTop="18dp"
        android:orientation="vertical"
           android:layout_weight="2"
        android:background="@drawable/boxes">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="8dp" >

            <EditText
                android:id="@+id/weightEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                android:ems="10"
                android:hint="Weight"
                android:inputType="numberDecimal" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weightEdit"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/kgRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/weightEdit"
                    android:layout_below="@+id/weightEdit"
                    android:layout_marginRight="25dp"
                    android:text="Kg" />

                <RadioButton
                    android:id="@+id/poundRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/weightEdit"
                    android:layout_below="@+id/weightEdit"
                    android:text="Pounds" />
            </RadioGroup>

            <EditText
                android:id="@+id/cmEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/weightEdit"
                android:layout_below="@+id/radioGroup1"
                android:ems="10"
                android:hint="Height(cm)"
                android:inputType="numberDecimal" >

                <requestFocus />
            </EditText>

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/cmEditText"
                android:layout_marginTop="5dp" >

                <EditText
                    android:id="@+id/ftEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Height(ft)"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/inchesEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="inches"
                    android:inputType="numberDecimal" />

            </TableRow>

            <Button
                android:id="@+id/button1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tableRow1"
                android:layout_centerHorizontal="true"
                android:text="Calculate"
                android:onClick="startBMI" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>

</RelativeLayout>
